<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_gravity="center"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="课程名"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="周一："
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />

        <TextView
            android:text="开始时间"
            android:id="@+id/week1_start"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <TextView
            android:text="结束时间"
            android:id="@+id/week1_end"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:padding="15dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/remove1"
            android:text="清空"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="周二："
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />

        <TextView
            android:text="开始时间"
            android:id="@+id/week2_start"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <TextView
            android:text="结束时间"
            android:id="@+id/week2_end"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/remove2"
            android:text="清空"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="周三："
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />

        <TextView
            android:text="开始时间"
            android:padding="15dp"
            android:id="@+id/week3_start"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <TextView
            android:text="结束时间"
            android:id="@+id/week3_end"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/remove3"
            android:text="清空"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="周四："
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />

        <TextView
            android:text="开始时间"
            android:padding="15dp"
            android:id="@+id/week4_start"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <TextView
            android:text="结束时间"
            android:padding="15dp"
            android:id="@+id/week4_end"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/remove4"
            android:text="清空"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="周五："
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />

        <TextView
            android:text="开始时间"
            android:padding="15dp"
            android:id="@+id/week5_start"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <TextView
            android:text="结束时间"
            android:padding="15dp"
            android:id="@+id/week5_end"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/remove5"
            android:text="清空"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <EditText
        android:layout_gravity="center"
        android:id="@+id/signTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="签到时间"
        android:inputType="number"/>

    <Button
        android:id="@+id/create"
        android:text="创建课程"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>